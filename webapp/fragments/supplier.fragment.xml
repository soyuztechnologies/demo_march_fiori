<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m"     
                         xmlns:f="sap.ui.layout.form">
    <Table id="tabSupp" items="{/supplier}">
        <headerToolbar>
            <Toolbar >
                <ToolbarSpacer ></ToolbarSpacer>
                <Button icon="sap-icon://filter" press="onFilterSupplier"></Button>
            </Toolbar>
        </headerToolbar>
        <items>
            <ColumnListItem >
                <cells>
                    <Text text="{name}"></Text>
                    <Input value="{city}" showValueHelp="true" valueHelpRequest="onF4Help"></Input>
                    <Text text="{sinceWhen}"></Text>
                    <Text text="{person}"></Text>
                </cells>                            
            </ColumnListItem>
        </items>
        <columns>
            <Column>
                <header>
                    <Label text="Name"></Label>
                </header>
            </Column>
            <Column>
                <header>
                    <Label text="City"></Label>
                </header>
            </Column>
            <Column minScreenWidth="Tablet">
                <header>
                    <Label text="Since When"></Label>
                </header>
            </Column>
            <Column minScreenWidth="Tablet" demandPopin="true">
                <header>
                    <Label text="Contact"></Label>
                </header>
            </Column>
        </columns>
    </Table>
</core:FragmentDefinition>