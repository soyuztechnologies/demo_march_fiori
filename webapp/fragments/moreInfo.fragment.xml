<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m"     
                         xmlns:f="sap.ui.layout.form">
    <f:SimpleForm>
        <f:content>
            <core:Title text="Product" />
            <Label text="Name"></Label>
            <Text text="{NAME}"></Text>
            <Label text="Description"></Label>
            <Text text="{DESCRIPTION} - {PRODUCT_ID}"></Text>
            <Label text="Unit"></Label>
            <Text text="{MEASURE_UNIT}"></Text>
            <Label text="Cost"></Label>
            <Text text="{PRICE} - {CURRENCY_CODE}"></Text>
            <Label text="Supplier"></Label>
            <Text text="{SUPPLIER_NAME}"></Text>
            <core:Title text="Supplier" />
            <Label text="BP Id"></Label>
            <Text text="{ToSupplier/BP_ID}"></Text>
            <Label text="Name"></Label>
            <Text text="{ToSupplier/COMPANY_NAME}"></Text>
            <Label text="Location"></Label>
            <Text text="{ToSupplier/CITY}, {ToSupplier/STREET} {ToSupplier/COUNTRY}"></Text>
            <Label text="Email"></Label>
            <Text text="{ToSupplier/EMAIL_ADDRESS}"></Text>
            <Label text="Contact No"></Label>
            <Text text="{ToSupplier/PHONE_NUMBER}"></Text>
        </f:content>
    </f:SimpleForm>
</core:FragmentDefinition>